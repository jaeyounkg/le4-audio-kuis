#:kivy 2.0.0

<MainWidget>:
    orientation: "vertical"
    padding: 20
    spacing: 20

    wave: wave
    spectrogram: spectrogram
    spectrum: spectrum

    wave_slider: wave_slider
    wave_frame_slider: wave_frame_slider
    slider: slider
    freq_slider: freq_slider

    BoxLayout:
        orientation: "vertical"

        WaveView:
            id: wave
            audio: root.audio

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.08

            Slider:
                id: wave_slider
                size_hint_x: 0.6
                min: 0
                max: len(root.audio.wave) - 2

            Slider:
                id: wave_frame_slider
                size_hint_x: 0.4
                min: 1
                max: len(root.audio.wave) - 1
                value: self.max

    BoxLayout:
        orientation: "horizontal"
        spacing: 20

        BoxLayout:
            orientation: "vertical"

            SpectrogramView:
                id: spectrogram
                audio: root.audio

            Slider:
                id: slider
                size_hint: 1, 0.08
                min: 0
                max: root.audio.spectrogram.shape[0] - 1

        BoxLayout:
            orientation: "vertical"

            SpectrumView:
                id: spectrum
                audio: root.audio

            Slider:
                id: freq_slider
                size_hint: 1, 0.08
                min: 1
                max: root.audio.SR // 2
                value: self.max
